<%- include('../partials/header') %>

<section id="show-page">
    <div>Title: </div>
    <div><%= book.title %></div>
    <div>Author: </div>
    <div><%= book.author %></div>
    <div>Publisher </div>
    <div><%= book.publisher %></div>
    <div>Publish Year </div>
    <div><%= book.publishYear %></div>
    <div>ISBN</div>
    <div><%= book.ISBN %></div>
</section>

<div>Group Member:</div>
    <ul>
        <%- book.group.map(m => 
        `<li>${m.name} <small>${m.profession}</small></li>`
        ).join('') %>
    </ul>
<form id="add-member-to-group" action="/books/<%= book._id %>/members"  method="POST">
    <select name="memberId">
        <%- members.map(m => 
            `<option value="${m._id}">${m.name}</option>`
        ).join('') %>
    </select>
    <button type="submit">Add to Group</button>
</form>

<br><h2>Reviews</h2>
<form id="add-review-form" method="POST"
  action="/books/<%= book._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Review">
</form>

<% if (book.reviews.length) { %>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Review</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            <% let total = 0 %>
            <% book.reviews.forEach(r => { %>
                <% total += r.rating %>
                <tr>
                  <td><%= r.createdAt.toLocaleDateString() %></td>
                  <td><%= r.content %></td>
                  <td><%= r.rating %></td>
                </tr>
            <% }); %>
            <tr>
                <td colspan="2"></td>
                <td><strong><%= (total / book.reviews.length).toFixed(1) %></strong></td>
              </tr>
        </tbody>
    </table>
<% } else { %>
    <h5>No Reviews</h5>
<% } %>
  
<%- include('../partials/footer') %>
