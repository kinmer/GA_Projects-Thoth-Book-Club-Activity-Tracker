<%- include('../partials/header') %>

<h2>Book List</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Publish Year</th>
      <th>ISBN</th>
      <th>Customer Rating</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% books.forEach(b => { %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.author %></td>
        <td><%= b.publisher %></td>
        <td><%= b.publishYear %></td>
        <td><%= b.ISBN %></td>
        <td><%= b.customerRating %></td>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>